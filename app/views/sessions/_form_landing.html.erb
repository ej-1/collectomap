<div class="login-form-landing">
	<% if flash[:alert] %>
		<p id="notice"><%= flash[:alert] %></p>
	<% end %>
	
	<%= form_tag do %>
		<fieldset>

			<div class="field">
				<%= text_field_tag :name, params[:name], :placeholder => 'Name' %>
			</div>

			<div class="field">
				<%= password_field_tag :password, params[:password], :placeholder => 'Password' %>
			</div>

			<div class="field">
				<%= submit_tag "Login", :class => 'btn btn-success btn-sm' %>
			</div>

		</fieldset>
	<% end %>

</div>

