

<% if @list_item.errors.any? %>

  <div id="error_explanation">
    <h2><%= pluralize(@list_item.errors.count, "error") %> prohibited this list_item from being saved:</h2>
    <ul>
    <% @list_item.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
    </ul>
  </div>
<% else %>
  <div class="col-md-4">
    <div class="list-item">
      <div class="img-container">
        <% if list_item.image_url(:thumb) %>
          <img border="0" alt="Image" src="<%= list_item.image_url(:thumb) %>" width="100%" height="100%">
        <% else %>
          <img border="0" alt="Image" src="" width="100%" height="100%">
        <% end %>
      </div>
      <p class="list-title"><%= link_to @list_item.title, @list_item %></p>
      <p class="list-body"><%= truncate(@list_item.description, length: 200) %></p>

      <table>
        <tbody>
            <tr>
              <% if current_user %>
                <td><%= current_user ? (link_to 'Edit', edit_list_item_path(@list_item), :class => 'btn btn-default btn-xs') : "" %></td>
                <td><%= link_to 'Destroy', list_item, method: :delete, data: { confirm: 'Are you sure?' }, :remote => true, :class => 'delete_list_item btn btn-default btn-xs' %></td>
              <% end %>
            </tr>
        </tbody>
      </table>
    </div>
  </div>
<% end %>
