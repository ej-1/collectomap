	        <p class="list-title"><%= link_to list.title, list %></p>
	        <p class="list-body"><%= list.description %></p>
	        <table>
	          <tbody>
	              <tr>
	              </tr>
	          </tbody>
	        </table>
	      </div>
	    <% end %>
	  </div>
	</div>
</div>


</body>
</html>