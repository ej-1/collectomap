<p id="notice"><%= notice %></p>
<% if session[:user_id] %>
  <h1>My Lists</h1>
  
  <%= button_to 'New List', new_list_path, method: :get, :class => 'btn btn-success btn-sm' %>

<% elsif @created_by_user %>
  <h1><%= @created_by_user.name %>'s Lists</h1>
<% else %>
  <h1>My Lists</h1>
<% end %>

<br>

<div class="row">
  <% @lists.each do |list| %>
    <div class="col-md-4">
    <div class="list">
      <div class="img-container">
        <img border="0" alt="Image" src="<%= list.list_image_url %>" width="100%" height="100%">
      </div>
      <p class="list-title"><%= link_to list.title, list %></p>
      <p class="list-body"><%= list.description %></p>
      <table>
        <tbody>
            <tr>
            <% if current_user %>
              <td><%= link_to 'Edit', edit_list_path(list), :class => 'btn btn-default btn-xs' %></td>
              <td><%= link_to 'Delete', list, method: :delete, data: { confirm: 'Are you sure?' }, :class => 'btn btn-default btn-xs' %></td>
            <% end %>
            </tr>
        </tbody>
      </table>
    </div>
    </div>
  <% end %>
</div>


